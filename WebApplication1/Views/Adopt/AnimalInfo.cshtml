@model WebApplication1.Models.Adopt
@{
    ViewBag.Title = "Animal Information";
}

<body>
    <div class="jumbotron">
        <div class="row">
            <div class="col-5">
                <img src="~/Images/@Model.ImagePath" style="width:100%; height:100%; border-radius: 0.3rem;">
            </div>
            <div class="col-6">
                <div style="margin-bottom:10px; margin-top:20px; background-color:#CCCCCC; border-radius:0.3rem;">
                    <img src="~/iconname.ico" style="height:30px;width:30px; margin-right:10px;" />
                    <label>Name: @Model.APetName </label>
                    <div id="333"></div>
                </div>

                <div style="margin-bottom:10px; background-color:#CCCCCC; border-radius:0.3rem;">
                    <img src="~/animalicon.png" style="height:30px;width:30px; margin-right:10px;" />
                    <label>Type: </label>
                </div>

                <div style="margin-bottom:10px; background-color:#CCCCCC; border-radius:0.3rem;">
                    <img src="~/ageicon.png" style="height:30px;width:30px; margin-right:10px; " />
                    <label>Age: </label>
                </div>

                <div style=" background-color:#CCCCCC; border-radius:0.3rem;">
                    <img src="~/descriptionicon.png" style="height:30px;width:30px; margin-right:10px;" />
                     <label>Description: @Model.APetDescription </label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <button class="button-templated" style="margin-top:5%;">@Html.ActionLink("Adopt", "FormSubmit", "AdoptForm", new { petname = Model.APetName }, null)</button>
            </div>
    </div>
</body>
