
@{
    ViewBag.Title = "Disappearance";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <fieldset>
        <legend>Report an animal disappearance</legend>
        <div class="form-group">
            <label for="AnimalName" class="col-md-2 control-label">Animal Name:</label>
            <div class="col-md-10">
                <input type="text" name="AnimalName" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Age" class="col-md-2 control-label">Age:</label>
            <div class="col-md-1">
                <input type="text" name="Age" value="" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-md-2 control-label">Description:</label>
            <div class="col-md-10">
                <textarea type="text" name="Description" value="" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="Image" class="col-md-2 control-label">Image</label>
            <div class="col-md-auto">
                <input type="file" class="form-control-file" name="Image" value="">
            </div>
        </div>
        <div class="form-group">
            <label>&nbsp;</label>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </fieldset>
</form>